html
	head
		title= "Hello"
	body
		p= JSON.stringify(group_counts)
		p= JSON.stringify(program_counts)

		div(class="chart-container", style="position: relative; height:500px; width:500px")
			canvas#groups

		script(src='https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.4.0/Chart.min.js')
		script(src='https://ajax.googleapis.com/ajax/libs/jquery/1.10.2/jquery.min.js')
		script(src='./random_colour.js')
		script.
			var ctx = document.getElementById('groups').getContext('2d');
			var chart = new Chart(ctx, {
				// The type of chart we want to create
				type: 'doughnut',

				// The data for our dataset
				data: {
					labels: "#{group_count_labels}".split(','),
					datasets: [{
						data: "#{group_count_values}".split(','),
						backgroundColor: "#{group_count_values}".split(',').map(() => randomColor())
					}]
				},

				// Configuration options go here
				options: {}
			});